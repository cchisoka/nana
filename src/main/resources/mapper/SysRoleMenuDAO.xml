<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxl.cc.nana.dao.SysRoleMenuDAO">
  <resultMap id="BaseResultMap" type="com.zhuxl.cc.nana.model.domain.SysRoleMenu">
    <id column="role_id" jdbcType="BIGINT" property="roleId" />
    <id column="menu_id" jdbcType="BIGINT" property="menuId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    role_id, menu_id, create_time, update_time
  </sql>

  <insert id="insert" parameterType="com.zhuxl.cc.nana.model.domain.SysRoleMenu">
    insert into sys_role_menu (role_id, menu_id, create_time,
      update_time)
    values (#{roleId,jdbcType=BIGINT}, #{menuId,jdbcType=BIGINT}, now(),
            now())
  </insert>

  <delete id="deleteMenuByRoleId" parameterType="long">
    delete from sys_role_menu where role_id = #{roleId}
  </delete>

  <select id="selectMenuIdByRoleId" parameterType="long" resultType="java.lang.Long">
    select menu_id from sys_role_menu where role_id = #{roleId}
  </select>
</mapper>
